<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:text="18.03.2015, 20:00" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/date"
            android:layout_marginTop="10dp"
            android:text="ZALA 8"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/place"
            android:text="Row:" />

        <TextView
            android:id="@+id/row_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row"
            android:text="10" />

        <TextView
            android:id="@+id/seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row_number"
            android:text="Seats:" />

        <TextView
            android:id="@+id/seats_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/seats"
            android:text="20" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top">

        <ImageView
            android:id="@+id/screen_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/screen_image" />


        <com.frt.selectseats.SeatViewLayout
            android:id="@+id/rl_SeatContainer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/screen_image"
            android:layout_centerInParent="true">

        </com.frt.selectseats.SeatViewLayout>
    </RelativeLayout>
</RelativeLayout>